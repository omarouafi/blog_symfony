{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

{% if error %}

<div class="alert alert-danger">{{ error }}</div>
{% endif %}
<div class="auth-container">
    <form method="post" action="/auth/forgot-password" class="auth-block">
        <div class="auth-header">
            <h1>Mot de passe oublié</h1>
            <p>Entrez votre adresse e-mail pour réinitialiser votre mot de passe.</p>
        </div>
        <div class="form-block">
            <label for="email">Adresse e-mail:</label>
            <input class="form-input" type="email" id="email" name="email" value="{{ email }}" required autofocus>
        </div>
        <div class="form-block">
            <button class="btn btn-primary" type="submit">Envoyer</button>
        </div>
        <div class="auth-footer">
            Retour à <a href="/auth/login">la page de connexion</a>.
        </div>
    </form>
</div>
{% endblock %}