{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}


{% if error %}
<div class="alert alert-danger">{{ error }}</div>
{% endif %}
<div class="auth-container">
    <form method="post" action="/auth/login" class="auth-block">
        <div class="auth-header">
            <h1>Se connecter</h1>
            <p>Veuillez entrer vos informations pour accéder à votre compte.</p>
        </div>
        <div class="form-block">
            <label for="username">Adresse e-mail:</label>
            <input class="form-input" type="text" id="email" name="email" value="{{ email }}" required autofocus>
        </div>
        <div class="form-block">
            <label for="password">Mot de passe:</label>
            <input class="form-input" type="password" id="password" value="{{ password }}" name="password" required>
        </div>
        <div class="form-block">
            <a href="/auth/forgot">Mot de passe oublié ?</a>
        </div>
        <div class="form-block">
            <button class="btn btn-primary" type="submit">S'identifier</button>
        </div>

        <div class="auth-footer">
            Vous n'avez pas de compte ? <a href="/auth/register">Inscrivez-vous !</a>
        </div>
    </form>
</div>
{% endblock %}